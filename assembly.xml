<assembly>
	<id>pack</id>
	<formats>
		<format>zip</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>COPYING*</include>
				<include>TODO*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>/lib</directory>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>/samplePacks</directory>
			<outputDirectory>/samplePacks</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>target</directory>
			<outputDirectory></outputDirectory>
			<excludes>
				<exclude>*client.jar</exclude>
			</excludes>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>